<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/exq_query_item_height"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <!-- 第一行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:text="考试名称:"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/exa_query_name"
                    android:layout_width="0dp"
                    android:textColor="@color/answer_item_text_color"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>
                <TextView
                    android:text="开考时间:"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/exa_query_time"
                    android:layout_width="0dp"
                    android:textColor="@color/answer_item_text_color"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>

            </LinearLayout>
            <!-- 第二行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:text="考试成绩:"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/exa_query_score"
                    android:layout_width="0dp"
                    android:textColor="@color/answer_item_text_color"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"/>
                <!--考试类型，根据数据显示-->
                <LinearLayout
                    android:id="@+id/exa_type_layout"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="考试类型:"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/exa_query_type"
                        android:layout_width="0dp"
                        android:textColor="@color/answer_item_text_color"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/exa_query_details"
                android:text="详情>"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>