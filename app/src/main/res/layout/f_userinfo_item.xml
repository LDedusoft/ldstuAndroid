<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/input_list_item_height"
    android:orientation="horizontal"
    >
    <!--标题-->
    <TextView
        android:id="@+id/userinfo_item_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        />
    <!--只读值-->
    <TextView
        android:id="@+id/userinfo_item_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/input_list_item_text"
        android:textColor="@color/userInfo_text_color"
        android:visibility="gone"
        />
    <!--单选-->
    <RadioGroup
        android:id="@+id/raidoGroup_user_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <RadioButton
            android:id="@+id/radioButton_user_male"
            android:text="男"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/input_list_item_text"
            android:textColor="@color/userInfo_text_color"
            />
        <RadioButton
            android:id="@+id/radioButton_user_female"
            android:text="女"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/input_list_item_text"
            android:textColor="@color/userInfo_text_color"
            />
    </RadioGroup>
    <!--编辑值-->
    <EditText
        android:id="@+id/edit_user_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/input_list_item_text"
        android:textColor="@color/userInfo_text_color"
        android:background="@null"
        android:paddingLeft="0dp"
        android:visibility="gone" />
    <!--选择-->
    <TextView
        android:id="@+id/textClick_user_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:textSize="@dimen/input_list_item_text"
        android:textColor="@color/userInfo_text_color"
        android:visibility="gone" />
    <!--密码-->
    <EditText
        android:id="@+id/password_user_item"
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/input_list_item_text"
        android:textColor="@color/userInfo_text_color"
        android:background="@null"
        android:paddingLeft="0dp"
        android:visibility="gone" />
</LinearLayout>
</LinearLayout>